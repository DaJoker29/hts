include header
body(ng-app="hts" ng-controller="MainCtrl as app")
    include nav
    .container.js-masonry(data-masonry-options='{ "columnWidth": ".col-md-4", "itemSelector": ".col-md-4" }')
        include buttons
        include form
        include form2
        .alert.alert-danger(ng-show="error") There has been an error
        .col-md-4(ng-repeat="note in notes" ng-init="init()" style="border-left: 1px #ccc dotted;border-bottom: 1px #999 dotted;margin: 6px;")
            .btn-group.pull-right
                a.text-info(ng-click="updateNew(note);"): span.glyphicon.glyphicon-pencil &nbsp;
                a.text-danger(ng-click="del(note._id)"): span.glyphicon.glyphicon-remove
            h1(ng-show="note.title" ng-bind="note.title")
            p(ng-show="note.body" ng-bind="note.body")
            small.pull-right(ng-show="note.date" ng-bind="note.date | date: 'short'")

